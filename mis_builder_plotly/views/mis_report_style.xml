<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="mis_report_plotly_style_view_tree">
        <field name="name">mis.report.plotly.style.view.tree</field>
        <field name="model">mis.report.plotly.style</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="mis_report_plotly_style_view_form" model="ir.ui.view">
        <field name="name">mis.report.plotly.style.view.form</field>
        <field name="model">mis.report.plotly.style</field>
        <field name="arch" type="xml">
            <form string="MIS Report Plotly Style">
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" placeholder="Plotly Style Name" required="True" style="font-size: min(4vw, 2.6rem);"/>
                        </h1>
                    </div>
                    <group string="General">
                        <group>
                            <field
                                name="graph_type_inherit"
                                string="Graph Type inherit"
                            />
                        </group>
                        <group>
                            <field
                                name="graph_type"
                                attrs="{'invisible': [('graph_type_inherit', '=', True)]}"
                            />
                        </group>
                    </group>
                    <group string="Color" col="8">
                        <group>
                            <field name="color_inherit"/>
                        </group>
                        <div colspan="4">
                            <group>
                                <group>
                                    <field
                                        name="color"
                                        colspan="2"
                                        attrs="{'invisible': [('color_inherit', '=', True)]}"
                                    />
                                </group>
                                <group>
                                    <field
                                        name="color"
                                        nolabel="1"
                                        attrs="{'invisible': [('color_inherit', '=', True)]}"
                                        widget="color"
                                    />
                                </group>
                            </group>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="mis_report_plotly_style_view_action">
        <field name="name">MIS Report Plotly Styles</field>
        <field name="view_id" ref="mis_report_plotly_style_view_tree" />
        <field name="res_model">mis.report.plotly.style</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="mis_report_plotly_style_view_menu"
        parent="mis_builder.mis_report_conf_menu"
        name="MIS Report Plotly Styles"
        action="mis_report_plotly_style_view_action"
        sequence="23"
    />
</odoo>
