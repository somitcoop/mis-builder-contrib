<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- MIS REPORT Template -->
    <record model="ir.ui.view" id="mis_report_view_form_inherited">
        <field name="name">mis.report.view.form</field>
        <field name="inherit_id" ref="mis_builder.mis_report_view_form"/>
        <field name="model">mis.report</field>
        <field name="arch" type="xml">

            <field name="style_id" position="after">
                <field name="plotly_style_id" />
            </field>
        </field>
    </record>

    <!-- KPI -->
    <record model="ir.ui.view" id="mis_report_view_kpi_form_inherited">
        <field name="name">mis.report.view.kpi.form</field>
        <field name="inherit_id" ref="mis_builder.mis_report_view_kpi_form"/>
        <field name="model">mis.report.kpi</field>
        <field name="arch" type="xml">

            <field name="style_expression" position="after">
                <field name="plotly_style_id" />
            </field>
        </field>
    </record>

</odoo>
