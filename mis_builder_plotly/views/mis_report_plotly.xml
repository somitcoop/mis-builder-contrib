<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- The formal view for plotly chart -->
    <record model="ir.ui.view" id="mis_report_instance_result_view_plotly_form">
        <field name="name">mis.report.instance.result.view.plotly.form</field>
        <field name="model">mis.report.instance</field>
        <field name="priority" eval="21 " />
        <field name="arch" type="xml">
            <form
                string="MIS Report Plotly Preview"
                edit="false"
                create="false"
                delete="false"
            >
                <sheet>
                    <field
                        name="plotly_chart"
                        widget="plotly_chart"
                        nolabel="1"
                        style="width:100%"
                    />
                </sheet>
            </form>
        </field>
    </record>
</odoo>
