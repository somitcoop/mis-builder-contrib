<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Plotly Configurations inheriting the report instance -->
    <record model="ir.ui.view" id="mis_report_instance_view_form_inherited">
        <field name="name">mis.report.instance.view.form</field>
        <field name="inherit_id" ref="mis_builder.mis_report_instance_view_form"/>
        <field name="model">mis.report.instance</field>
        <field name="priority" eval="15" />
        <field name="arch" type="xml">

            <!-- Checkbox -->
            <xpath expr="//group" position="after">
                    <group>
                        <group>
                            <field name="show_plotly_chart"/>
                        </group>
                        <group>
                        </group>
                    </group>
            </xpath>

            <!-- Preview Button -->
            <xpath expr="//div[@name='buttons']/button[@name='preview']" position="after">
                <button
                    type="object"
                    name="preview_plotly"
                    string="Preview Chart"
                    icon="fa-bar-chart"
                />
            </xpath>
            
            <!-- Add use_in_plotly field for the hardcoded tree view of periods -->
            <xpath expr="//notebook//field[@name='period_ids']/tree" position="inside">
                <field name="use_in_plotly"/>
            </xpath>
            

            <!-- Notebook Page for configurations -->
            <xpath expr="//notebook" position="inside">
                <page
                    string="Plotly"
                    attrs="{'invisible': [('show_plotly_chart', '=', False)]}"
                >
                    <group>
                        <field
                            name="use_in_plotly_period_ids"
                            nolabel="1"
                            colspan="2"
                            attrs="{'required': [('comparison_mode', '=', True)]}"
                            context="{'tree_view_ref': 'mis_builder_plotly.mis_report_instance_period_view_tree_plotly'}"
                        />
                    </group>

                    <group>
                        <field
                            name="plotly_kpi_ids"
                            context="{'default_mis_report_instance_id': id}">
                            <tree
                                editable="bottom"
                                create="1"
                                write="1"
                                limit="15"
                            >
                                <field name="mis_report_instance_id" invisible="1"/>
                                <field name="report_kpi_ids" invisible="1"/>
                                <field name="kpi_id" can_create="0"/>
                                <field name="kpi_style_id"/>
                            </tree>
                        </field>
                        <div colspan="1"/>
                        <button
                            name="action_plotly_add_all_kpis"
                            type="object"
                            string="Restore All KPIs"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>